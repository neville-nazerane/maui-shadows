<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiShadows.Pages.ImageShadowsPage"
             Title="Image Shadows">
    <VerticalStackLayout>

        <Image Source="dotnet_bot.png"
                Grid.Row="1"
                WidthRequest="250"
                HeightRequest="310">
            <Image.Shadow>
                <Shadow Brush="Black"
                         Offset="20,20"
                         Radius="40"
                         Opacity="0.8" />
            </Image.Shadow>
        </Image>

    </VerticalStackLayout>
</ContentPage>